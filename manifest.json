{
  "manifest_version": 3,
  "name": "Azure Data Explorer Kusto Finder",
  "version": "0.2",
  "icons": {
    "16": "icons/search-icon.png"},
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "notifications", "activeTab", "scripting"],
  "host_permissions": ["https://dataexplorer.azure.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Opens the popup"
    }
  }
}